// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
{
  "telemetry": {
    "metrics": false
  },
  // AI
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4"
    },
    "version": "2"
  },
  // Appearance
  "terminal": {
    "dock": "right"
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 3,
    "coloring": "indent_aware",
    "background_coloring": "disabled"
  },
  "relative_line_numbers": true,
  "ui_font_size": 17,
  "buffer_font_family": "Berkeley Mono",
  "buffer_font_size": 18,
  "theme": "One Hunter Classic",
  // Experience
  "vim_mode": true,
  "confirm_quit": true,
  "base_keymap": "VSCode",
  "format_on_save": "language_server"
}
